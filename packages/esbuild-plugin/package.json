{
    "name": "@datadog/esbuild-plugin",
    "packageManager": "yarn@4.0.2",
    "license": "MIT",
    "author": "Datadog",
    "main": "./dist/src/index.js",
    "exports": {
        ".": "./src/index.ts",
        "./*": "./src/*.ts"
    },
    "publishConfig": {
        "access": "public",
        "exports": {
            "./package.json": "./package.json",
            ".": "./dist/src/index.js",
            "./*": "./dist/src/*.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "yarn clean && tsc",
        "clean": "rm -rf dist",
        "prepack": "yarn build",
        "typecheck": "tsc --noEmit",
        "watch": "tsc -w"
    },
    "devDependencies": {
        "typescript": "5.4.3"
    },
    "dependencies": {
        "@datadog/build-plugins-core": "workspace:*",
        "@dd/factory": "workspace:*",
        "esbuild": "0.20.2"
    },
    "peerDependencies": {
        "esbuild": "0.x"
    }
}
