{
    "name": "@dd/core",
    "packageManager": "yarn@4.0.2",
    "private": true,
    "license": "MIT",
    "author": "Datadog",
    "description": "Core helpers for Datadog's Build Plugins.",
    "homepage": "https://github.com/DataDog/build-plugin/tree/main/packages/core#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/DataDog/build-plugin",
        "directory": "packages/core"
    },
    "exports": {
        ".": "./src/index.ts",
        "./*": "./src/*.ts"
    },
    "scripts": {
        "build": "yarn clean && rollup --config rollup.config.mjs",
        "clean": "rm -rf dist",
        "prepack": "yarn build",
        "typecheck": "tsc --noEmit",
        "watch": "tsc -w"
    },
    "devDependencies": {
        "@babel/core": "7.24.5",
        "@babel/preset-env": "7.24.5",
        "@babel/preset-typescript": "7.24.1",
        "@dd/tools": "workspace:*",
        "@rollup/plugin-babel": "6.0.4",
        "@rollup/plugin-commonjs": "25.0.7",
        "@rollup/plugin-json": "6.1.0",
        "@rollup/plugin-node-resolve": "15.2.3",
        "@types/babel__core": "^7",
        "@types/babel__preset-env": "^7",
        "@types/chalk": "2.2.0",
        "@types/fs-extra": "8.1.0",
        "@types/node": "13.13.4",
        "chalk": "2.3.1",
        "esbuild": "0.20.2",
        "fs-extra": "7.0.1",
        "pretty-bytes": "5.6.0",
        "rollup": "4.17.1",
        "rollup-plugin-dts": "6.1.0",
        "rollup-plugin-esbuild": "6.1.1",
        "typescript": "5.4.3",
        "unplugin": "1.10.1"
    }
}
