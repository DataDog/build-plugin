{
    "name": "@datadog/build-plugins",
    "private": true,
    "version": "2.0.0",
    "license": "MIT",
    "author": "Datadog",
    "repository": "git://github.com/DataDog/build-plugin.git",
    "workspaces": [
        "packages/*",
        "packages/tests/mocks/projects/*"
    ],
    "volta": {
        "node": "18.19.0",
        "yarn": "1.22.19"
    },
    "scripts": {
        "build": "yarn workspace @datadog/esbuild-plugin build && yarn workspace @datadog/webpack-plugin build",
        "cli": "yarn workspace @datadog/build-plugins-tools cli",
        "format": "yarn lint --fix",
        "lint": "eslint ./packages/**/*.{ts,js} --quiet",
        "oss": "yarn cli oss -d bin -d src -l mit",
        "test": "yarn build && yarn workspace @datadog/build-plugins-tests test",
        "typecheck": "yarn workspace @datadog/esbuild-plugin typecheck && yarn workspace @datadog/webpack-plugin typecheck",
        "watch": "concurrently --kill-others \"yarn workspace @datadog/esbuild-plugin watch\" \"yarn workspace @datadog/webpack-plugin watch\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "DISABLE_SPINNER=true lint-staged"
        }
    },
    "devDependencies": {
        "@types/node": "13.13.4",
        "@typescript-eslint/eslint-plugin": "7.5.0",
        "@typescript-eslint/parser": "7.5.0",
        "concurrently": "8.2.2",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-import-resolver-node": "0.3.9",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-prettier": "5.1.3",
        "husky": "4.2.5",
        "lint-staged": "10.2.0",
        "prettier": "3.2.5",
        "turbo": "1.13.2",
        "typescript": "5.4.3"
    },
    "packageManager": "yarn@4.0.2"
}
