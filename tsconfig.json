{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "rootDir": "./",
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "lib": ["es2019"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": false,
        "strict": true,
        "target": "es6"
    },
    "include": ["**/*"],
    "exclude": ["./packages/tests"],
    "paths": {
        "@datadog/build-plugins-assets/*": "../assets/*",
        "@datadog/build-plugins-core/*": "../core/*",
        "@datadog/esbuild-plugin/*": "../esbuild-plugin/*",
        "@datadog/build-plugins-hooks/*": "../hooks/*",
        "@datadog/build-plugins-tools/*": "../tools/*",
        "@datadog/webpack-plugin/*": "../webpack-plugin/*"
    }
}
