{
    "name": "@datadog/build-plugins",
    "private": true,
    "version": "2.0.0",
    "license": "MIT",
    "author": "Datadog",
    "repository": "git://github.com/DataDog/build-plugin.git",
    "main": "./dist",
    "workspaces": [
        "packages/*",
        "src/__tests__/mocks/projects/*"
    ],
    "files": [
        "dist/**/*"
    ],
    "publishConfig": {
        "access": "public"
    },
    "volta": {
        "node": "18.19.0"
    },
    "scripts": {
        "build": "yarn clean; tsc",
        "clean": "rm -rf dist/*",
        "cli": "yarn workspace @datadog/build-plugins-tools cli",
        "format": "yarn lint --fix",
        "lint": "eslint -c ./.eslintrc.js ./**/*.ts --quiet",
        "oss": "yarn cli oss -d bin -d src -l mit",
        "prepack": "yarn build",
        "test": "NODE_OPTIONS=\"--openssl-legacy-provider ${NODE_OPTIONS:-}\" jest --verbose",
        "typecheck": "tsc --noEmit",
        "watch": "tsc -w"
    },
    "dependencies": {
        "@datadog/build-plugins-core": "workspace:*",
        "chalk": "2.3.1",
        "fs-extra": "7.0.1",
        "pretty-bytes": "5.6.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "DISABLE_SPINNER=true lint-staged"
        }
    },
    "devDependencies": {
        "@datadog/build-plugins-hooks": "workspace:*",
        "@datadog/esbuild-plugin": "workspace:*",
        "@datadog/webpack-plugin": "workspace:*",
        "@types/chalk": "2.2.0",
        "@types/fs-extra": "8.1.0",
        "@types/jest": "26.0.0",
        "@types/node": "13.13.4",
        "@types/webpack": "5.28.0",
        "@typescript-eslint/eslint-plugin": "2.30.0",
        "@typescript-eslint/parser": "2.30.0",
        "esbuild": "0.12.26",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-import-resolver-node": "0.3.3",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-prettier": "3.1.3",
        "husky": "4.2.5",
        "jest": "26.0.1",
        "lint-staged": "10.2.0",
        "prettier": "2.0.5",
        "ts-jest": "26.1.0",
        "typescript": "3.8.3",
        "webpack": "5.49.0"
    },
    "peerDependencies": {
        "esbuild": "*",
        "webpack": "*"
    },
    "peerDependenciesMeta": {
        "esbuild": {
            "optional": true
        },
        "webpack": {
            "optional": true
        }
    },
    "packageManager": "yarn@4.0.2"
}
