{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["es2019"],
        "module": "Node16",
        "moduleResolution": "node16",
        "noImplicitAny": true,
        "rootDir": "./",
        "sourceMap": false,
        "strict": true,
        "target": "es6"
    },
    "include": ["**/*"],
    "exclude": [
        "./packages/*/dist",
        "./packages/tests",
        "./node_modules",
        "./packages/*/node_modules"
    ]
}
