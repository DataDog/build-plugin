{
    "name": "@datadog/build-plugin",
    "version": "0.4.4",
    "license": "MIT",
    "author": "Datadog",
    "repository": "git://github.com/DataDog/build-plugin.git",
    "main": "./dist",
    "workspaces": [
        "src/__tests__/mocks/projects/*"
    ],
    "files": [
        "dist/**/*"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "yarn clean; tsc",
        "clean": "rm -rf dist/*",
        "cli": "node ./bin/index.js",
        "format": "yarn lint --fix",
        "lint": "eslint -c ./.eslintrc.js ./**/*.ts",
        "oss": "yarn cli oss -d bin -d src -l mit",
        "prepack": "yarn build",
        "test": "jest --verbose",
        "typecheck": "tsc --noEmit",
        "watch": "tsc -w"
    },
    "dependencies": {
        "chalk": "2.3.1",
        "fs-extra": "7.0.1",
        "webpack": "5.49.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "DISABLE_SPINNER=true lint-staged"
        }
    },
    "devDependencies": {
        "@types/chalk": "2.2.0",
        "@types/fs-extra": "8.1.0",
        "@types/jest": "26.0.0",
        "@types/node": "13.13.4",
        "@types/webpack": "5.28.0",
        "@typescript-eslint/eslint-plugin": "2.30.0",
        "@typescript-eslint/parser": "2.30.0",
        "clipanion": "2.6.0",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-import-resolver-node": "0.3.3",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-prettier": "3.1.3",
        "glob": "7.1.6",
        "husky": "4.2.5",
        "inquirer": "7.3.3",
        "jest": "26.0.1",
        "lint-staged": "10.2.0",
        "prettier": "2.0.5",
        "ts-jest": "^26.1.0",
        "typescript": "3.8.3"
    },
    "peerDependencies": {
        "webpack": "*"
    }
}
