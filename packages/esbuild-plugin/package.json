{
    "name": "@datadog/esbuild-plugin",
    "packageManager": "yarn@4.0.2",
    "license": "MIT",
    "author": "Datadog",
    "main": "./dist/packages/esbuild-plugin",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist/*"
    ],
    "scripts": {
        "build": "yarn clean; tsc",
        "clean": "rm -rf dist",
        "prepack": "yarn build",
        "typecheck": "tsc --noEmit",
        "watch": "tsc -w"
    },
    "devDependencies": {
        "typescript": "5.4.3"
    },
    "dependencies": {
        "@datadog/build-plugins-core": "workspace:*",
        "esbuild": "0.20.2"
    },
    "peerDependencies": {
        "esbuild": "*"
    },
    "peerDependenciesMeta": {
        "esbuild": {
            "optional": true
        }
    }
}
