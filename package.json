{
    "name": "@datadog/build-plugin",
    "version": "0.0.4",
    "license": "MIT",
    "author": "Datadog",
    "repository": "git://github.com/DataDog/build-plugin.git",
    "main": "./dist",
    "files": [
        "dist/**/*",
        "README",
        "LICENSE"
    ],
    "scripts": {
        "build": "yarn clean; tsc",
        "clean": "rm -rf dist/*",
        "format": "lint --fix",
        "lint": "eslint",
        "prepack": "yarn build",
        "typecheck": "tsc -p .",
        "watch": "tsc -w"
    },
    "dependencies": {
        "chalk": "2.3.1",
        "fs-extra": "7.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "DISABLE_SPINNER=true lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn typecheck",
            "yarn format",
            "git add"
        ],
        "relative": "true"
    },
    "devDependencies": {
        "@babel/core": "7.9.0",
        "@babel/preset-env": "7.9.5",
        "@babel/preset-typescript": "7.9.0",
        "@types/chalk": "2.2.0",
        "@types/fs-extra": "8.1.0",
        "@types/node": "13.13.4",
        "@types/webpack": "4.41.12",
        "@typescript-eslint/eslint-plugin": "2.30.0",
        "@typescript-eslint/parser": "2.30.0",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-import-resolver-node": "0.3.3",
        "eslint-plugin-arca": "0.9.5",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-prettier": "3.1.3",
        "husky": "4.2.5",
        "lint-staged": "10.2.0",
        "prettier": "2.0.5",
        "ts-node": "8.9.1",
        "typescript": "3.8.3"
    }
}
