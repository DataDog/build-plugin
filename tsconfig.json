{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "declaration": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "lib": ["es2019"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "rootDir": "./",
        "sourceMap": false,
        "strict": true,
        "target": "es6"
    },
    "include": ["src/**/*", "packages/**/*"]
}
