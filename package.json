{
    "name": "@datadog/build-plugins",
    "private": true,
    "version": "2.0.0",
    "license": "MIT",
    "author": "Datadog",
    "repository": "git://github.com/DataDog/build-plugin.git",
    "workspaces": [
        "packages/*",
        "packages/tests/src/mocks/projects/*",
        "packages/tests/src/mocks/projects/*/workspaces/*"
    ],
    "volta": {
        "node": "18.19.0",
        "yarn": "1.22.19"
    },
    "scripts": {
        "build:all": "yarn workspaces foreach -Apti --exclude \"project-*\" run build",
        "build:tests": "yarn workspaces foreach -Apti --include \"project-*\" run build",
        "cli": "yarn workspace @datadog/build-plugins-tools cli",
        "format": "yarn lint --fix",
        "lint": "eslint ./packages/**/*.{ts,js} --quiet",
        "oss": "yarn cli oss -d bin -d src -l mit",
        "test": "yarn build:all && yarn build:tests && yarn workspace @datadog/build-plugins-tests test",
        "typecheck:all": "yarn workspaces foreach -Apti --exclude \"project-*\" run typecheck",
        "watch:all": "yarn workspaces foreach -Apti --exclude \"project-*\" run watch"
    },
    "husky": {
        "hooks": {
            "pre-commit": "DISABLE_SPINNER=true lint-staged"
        }
    },
    "devDependencies": {
        "@types/node": "13.13.4",
        "@typescript-eslint/eslint-plugin": "7.5.0",
        "@typescript-eslint/parser": "7.5.0",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-import-resolver-node": "0.3.9",
        "eslint-import-resolver-typescript": "3.6.1",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-prettier": "5.1.3",
        "husky": "4.2.5",
        "lint-staged": "10.2.0",
        "prettier": "3.2.5",
        "typescript": "5.4.3"
    },
    "packageManager": "yarn@4.0.2"
}
